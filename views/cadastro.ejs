            <img src="./images/logo_pequena.png" />
        </div>
        <form action="" method="post" style="text-align: center; display: flex; justify-content: center;">
            <div class="container_cadastro">


                <div class="Title">
                    <p class="title" style="font-weight: 700; font-size: 40px; color: black;">Cadastro</p>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="text" id="input" required placeholder=" ">
                    <label class="did-floating-label">Nome</label>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="text" id="input" required placeholder=" ">
                    <label class="did-floating-label">Email</label>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="Password" id="Senha" required placeholder=" ">
                    <label class="did-floating-label">Senha</label>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="text" id="input" required placeholder=" ">
                    <label class="did-floating-label">CÃ³digo de bombeiro</label>
                </div>

                <button class="button_cadastro" type="submit">Cadastrar</button>
            </div>
        </form>
        <%- include('./partials/footer.ejs') %>
</body>

</html>