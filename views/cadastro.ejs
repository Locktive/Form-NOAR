<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./stylesheets/floating_label.css" />
    <link rel="stylesheet" type="text/css" href="./stylesheets/margin.css" />
    <link rel="icon" type="image/x-icon" href="./images/logo_pequena.png"/>
    <title><%- title %></title>
    <link rel="stylesheet" type="text/css" href="./stylesheets/custom_checkbox1.css" />
    <style>
        /* Add responsive styles */


        .button_cadastro {
            text-align: center;
            border: none;
            border-radius: 10px;
            color: black;
            background: #A3ADE0;
            font-size: 15px;
            padding: 10px 20px 10px 20px;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-weight: 700;
            word-wrap: break-word;
        }

        .button_cadastro:hover {
            text-align: center;
            border: none;
            border-radius: 10px;
            color: black;
            background: #8e97c5;
            font-size: 15px;
            padding: 10px 20px 10px 20px;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-weight: 700;
            word-wrap: break-word;
        }

        .input {
            border: solid #dddddd 3px;
            height: 15px;
            border-radius: 5px;
        }

        .container_cadastro {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 30px;
            width: 18rem;
            padding: 20px;
            background-color: #F1F1F1;
            border-radius: 5px;
        }

        /* input */
        .input-group {
            position: relative;
        }

        .input {
            background-color: #F1F1F1;
            font-size: 18px;
            padding: 10px 10px 10px 5px;
            display: block;
            justify-content: center;
        }

        input:focus {
            outline: none;
        }

        label {
            color: #999;
            font-size: 15px;
            font-weight: normal;
            position: absolute;
            pointer-events: none;
            padding: 5px;
            left: 10px;
            top: 5px;
            transition: 0.2s ease all;
            -moz-transition: 0.2s ease all;
            -webkit-transition: 0.2s ease all;
        }

        .input:focus~label,
        .input:valid~label {

            top: -14px;
            font-size: 15px;
            background-color: #F1F1F1;
            color: #9c9c9c;
        }

        .bar {
            position: relative;
            display: block;
            width: 100%;
        }


        .bar:before {
            left: 50%;
        }

        .bar:after {
            right: 50%;
        }


        /* input */
    </style>
</head>

<body class="body">
    <%- include('./partials/cabecalho.ejs') %>
        <div>
            <img src="./images/logo_pequena.png" />
        </div>
        <form onsubmit="return validate(document.querySelector('input[name=codbomb]'))" action="" method="post" style="text-align: center; display: flex; justify-content: center;">
            <div class="container_cadastro">


                <div class="Title">
                    <p class="title" style="font-weight: 700; font-size: 40px; color: black;">Cadastro</p>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="text" id="nome" name="nome" required placeholder=" ">
                    <label class="did-floating-label">Nome</label>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="Password" name="senha" id="Senha" required placeholder=" ">
                    <label class="did-floating-label">Senha</label>
                </div>

                <div class="did-floating-label-content">
                    <input class="did-floating-input" type="text" oninput="validateValue(this)" id="codbomb" name="codbomb" required placeholder=" ">
                    <label class="did-floating-label">C칩digo de bombeiro</label>
                </div>
                
                <div>
                    <div class="linha_checkbox-group">
                        Ser치 administrador
                        <input type="checkbox" onclick="teste()" name="adm" value="0" />
                    </div>
                </div>

                <button class="button_cadastro" onsubmit="return validate(document.querySelector('input[name=codbomb]'))" type="submit">Cadastrar</button>
            </div>
        </form>
        <%- include('./partials/footer.ejs') %>
        <script>
            // teste de valor de checkbox do adm
            function teste() {
                var checkbox = document.querySelector("input[name=adm]");
                if (checkbox.checked) {
                    checkbox.value = 1;
                } else {
                    checkbox.value = 0;
                }
                console.log(checkbox.value);
            }

        // mascara para aceitar apenas 10 numeros
            function validateValue(elem) {
    const value = elem.value;
    const numVal = value.replace(/\D+/g, "");
    elem.value = numVal.slice(0, 10); // Limit to 10 digits
}
    // valida o tamanho do c칩digo do bombeiro
    function validate(elem){
        if (elem.value.length !== 10) {
        alert("Por favor insira exatamente 10 digitos no c칩digo do bombeiro.");
        return false;
    }
    return true;
}
        </script>
</body>

</html>